<%- include('./partials/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<!-- Show the "ultimos" products -->
			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Resultados de la busqueda</h2>
					</div>
					<% if (!productos.length) { %>
						<h1 class="resultados-busqueda"> No hay resultados para la busqueda </h1>
					<% } else { %>
						<% for (let index = 0; index < productos.length; index++) { %>
							<% const novedad = productos[index]; %>
							<div class="col-12 col-sm-6 col-lg-3">
								<section class="product-box">
									<a href="/product/<%= novedad.id %>">
										<figure class="product-box_image">
											<img src="/images/products/<%= novedad.shirt_image %> " alt="<% novedad.shirt_name %>"
											class="img-card">
										</figure>
										<article class="product-box_data">
											<h2> <%= novedad.shirt_name  %> </h2>
											<p><%=novedad.shirt_description %> </p>
											<p><%=novedad.comment.length %></p>
											<p><%=novedad.user.username%></p>
										</article>
									</a>
								</section>
							</div>
						<% }} %>
			
					
				</div>
			</div>
		</div>
	</div>

<%- include('./partials/footer') %>


</body>

</html>