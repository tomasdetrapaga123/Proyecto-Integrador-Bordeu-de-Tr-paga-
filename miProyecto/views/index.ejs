<%- include('./partials/header') %>


	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/foto-banner.jpg" alt="Foto Cristiano">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let index = 0; index < productos.length; index++) { %>
				<% const novedad = productos[index]; %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= novedad.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= novedad.shirt_image %> " alt="<% novedad.shirt_name %>"
								class="img-card">
							</figure>
							<article class="product-box_data">
								<h2> <%= novedad.shirt_name  %> </h2>
								<p><%=novedad.shirt_description %> </p>
								<p><%=novedad.comment.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let index = 0; index < productos.length; index++) { %>
				<% const novedad = productos[index]; %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= novedad.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= novedad.shirt_image %> " alt="<% novedad.shirt_name %>"
								class="img-card">
							</figure>
							<article class="product-box_data">
								<h2> <%= novedad.shirt_name  %> </h2>
								<p><%=novedad.shirt_description %> </p>
								<p><%=novedad.comment.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>


		</div>
	</div>
	<!-- /Más comentados -->

	<%- include('./partials/footer') %>


</body>	
</html>
