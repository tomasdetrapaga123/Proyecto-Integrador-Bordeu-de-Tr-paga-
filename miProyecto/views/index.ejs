<%- include('./partials/header') %>


	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="/images/foto-banner.jpg" alt="Foto Cristiano">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let index = 0; index < novedades.length; index++) { %>
				<% const novedad = novedades[index]; %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product">
							<figure class="product-box_image">
								<img src="/images/products/<%= novedad.imageName %> " alt="<% novedad.name %>"
								class="img-card">
							</figure>
							<article class="product-box_data">
								<h2> <%= novedad.name  %> </h2>
								<p><%=novedad.description %> </p>
								<p><%=novedad.commentsCount %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		
			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let index = 0; index < masComentados.length; index++) { %>
				<% const masComentado = masComentados[index]; %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product" >
						<figure class="product-box_image">
							<img src="/images/products/<%= masComentado.imageName %> " alt="<% masComentado.name %>"
							 class="img-card">
						</figure>
						<article class="product-box_data">
							<h2> <%= masComentado.name  %> </h2>
							<p>  <%=masComentado.description %> </p>
							<p>Comentarios: <%=masComentado.commentsCount %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>


		</div>
	</div>
	<!-- /Más comentados -->

	<%- include('./partials/footer') %>


</body>	
</html>
