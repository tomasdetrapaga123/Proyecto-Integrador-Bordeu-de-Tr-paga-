<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Home</title>
	<!-- estilos CSS -->
	<link rel="stylesheet" href="/stylesheets/style.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>

	<% if (locals.user != undefined) { %> <!--Existe en locals una propedad llamada user quiero que me muestre el headerLogueado-->
		<%- include('./partials/headerLogueado.ejs') %>
	<% }else{ %> <!--Si no que me muestre el header-->
		<%- include('./partials/header.ejs') %>
		<% } %>

						<!-- /Header -->

						<!-- Banner -->
						<!-- <div class="banner">
							<img src="/images/foto-banner.jpg" alt="Foto Cristiano">
						</div> -->
						<!-- /Banner -->

						<!-- Novedades -->
						<div class="container products-wrapper">
							<div class="row">
								<div class="col-12">
									<h2 class="products-title">Novedades</h2>
								</div>
								<!-- Show the "ultimos" products -->
								<% for (let index=0; index < productos.length; index++) { %>
									<% const novedad=productos[index]; %>
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/product/<%= novedad.id %>">
													<figure class="product-box_image">
														<img src="/images/products/<%= novedad.shirt_image %> "
															alt="<% novedad.shirt_name %>" class="img-card">
													</figure>
													<article class="product-box_data">
														<h2>
															<%= novedad.shirt_name %>
														</h2>
														<p> Descripción:
															<%=novedad.shirt_description %>
														</p>
														<p> Comentarios:
															<%=novedad.comment.length %>
														</p>
														<p> Cargado por:
															<%=novedad.user.username%>
														</p>
													</article>
												</a>
											</section>
										</div>
										<% } %>


							</div>
						</div>
						<!-- /Novedades -->
						<!-- Más comentados -->
						<div class="container products-wrapper">
							<div class="row">
								<div class="col-12">
									<h2 class="products-title">Más comentados</h2>
								</div>
								<!-- Show the "ultimos" products -->
								<% for (let index=0; index < productos.length; index++) { %>
									<% const novedad=productos[index]; %>
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/product/<%= novedad.id %>">
													<figure class="product-box_image">
														<img src="/images/products/<%= novedad.shirt_image %> "
															alt="<% novedad.shirt_name %>" class="img-card">
													</figure>
													<article class="product-box_data">
														<h2>
															<%= novedad.shirt_name %>
														</h2>
														<p> Descripción:
															<%=novedad.shirt_description %>
														</p>
														<p> Comentarios:
															<%=novedad.comment.length %>
														</p>
														<p> Cargado por:
															<%=novedad.user.username%>
														</p>
												</a>
											</section>
										</div>
										<% } %>


							</div>
						</div>
						<!-- /Más comentados -->

						<%- include('./partials/footer') %>


</body>

</html>