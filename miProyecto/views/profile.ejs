<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Home</title>
	<!-- estilos CSS -->
	<link rel="stylesheet" href="/stylesheets/style.css" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>

	<% if (locals.user != undefined) { %> <!--Existe en locals una propedad llamada user quiero que me muestre el headerLogueado-->
		<%- include('./partials/headerLogueado.ejs') %>
	<% }else{ %> <!--Si no que me muestre el header-->
		<%- include('./partials/header.ejs') %>
		<% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= user.img %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= user.username %>   	
						<a href="/users/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="info-usuario">
						<li>Productos: <%= user.products.length %> </li>
						<li>Comentarios: <%= user.comments.length %> </li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let index=0; index < user.products.length; index++) { %>
				<% const novedad=user.products[index]; %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%= novedad.id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= novedad.shirt_image %> "
										alt="<% novedad.shirt_name %>" class="img-card">
								</figure>
								<article class="product-box_data">
									<h2>
										<%= novedad.shirt_name %>
									</h2>
									<p>
										<%=novedad.shirt_description %>
									</p>
									<p>
										<%=novedad.comment.length %>
									</p>
									<p>
										<%=user.username%>
									</p>
								</article>
							</a>
						</section>
					</div>
					<% } %>


		</div>
	</div>
	<!-- /Mis productos -->


<%- include('./partials/footer') %>


</body>	
</html>